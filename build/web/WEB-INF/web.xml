<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>VerAgenda</servlet-name>
        <servlet-class>servlets.VerAgenda</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>servlets.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Registro</servlet-name>
        <servlet-class>servlets.Registro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AnadirContacto</servlet-name>
        <servlet-class>servlets.AnadirContacto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerContacto</servlet-name>
        <servlet-class>servlets.VerContacto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModificarContacto</servlet-name>
        <servlet-class>servlets.ModificarContacto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BorrarContacto</servlet-name>
        <servlet-class>servlets.BorrarContacto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValidarAgenda</servlet-name>
        <servlet-class>servlets.ValidarAgenda</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValidarPersona</servlet-name>
        <servlet-class>servlets.ValidarPersona</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VerAgenda</servlet-name>
        <url-pattern>/VerAgenda</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Registro</servlet-name>
        <url-pattern>/Registro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AnadirContacto</servlet-name>
        <url-pattern>/AnadirContacto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerContacto</servlet-name>
        <url-pattern>/VerContacto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModificarContacto</servlet-name>
        <url-pattern>/ModificarContacto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BorrarContacto</servlet-name>
        <url-pattern>/BorrarContacto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidarAgenda</servlet-name>
        <url-pattern>/ValidarAgenda</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidarPersona</servlet-name>
        <url-pattern>/ValidarPersona</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
